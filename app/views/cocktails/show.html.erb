
<!-- <div class="cards" style="width: 18rem;"> -->
  <div class="d-flex justify-content-center align-items-center flex-column">
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
    url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>'); width: 100%; height: 36em; background-repeat: no-repeat; background-size: cover;">
  </div>

  <div class="card-body text-center">
    <h5 class="card-title"></h5>
    <h5 class="card-title"><%= @cocktail.name %></h5>
    <% @cocktail.doses.each do |dose| %>
    <p class="card-text"><%= dose.description %></p>
    <p> <%= dose.ingredient.name %> <%= link_to  cocktail_dose_path(@cocktail, dose),
    method: :delete,
    data: { confirm: "Are you sure?" } do %>
    <i class="fas fa-minus-square"></i>
    <% end %>
  </p>
  <% end %>
  <p> <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: "btn btn-light w-100" %></p>
  <p><%= link_to 'Return to cocktails', cocktails_path(@cocktail), class: "btn btn-light w-100" %></p>
</div>
</div>
